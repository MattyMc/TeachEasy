function applyDragDrop() {
$(document).ready(function() {
	//Make all teachables draggable
	$(".teachable").draggable({ revert: true, handle: ".embed" });
	
	//Make the boxes droppable
	$( ".dropbox" ).droppable({
				accept: ".teachable",
				activeClass: "ui-state-hover",
				activate: function(event, ui) {
					$(".teachable-inner").css("background", "white");
					//$(".teachable-inner").css("color", "white");
					$(".top-right").css("background", "white");
				},
				tolerance: "pointer",
				drop: function( event, ui ) {
					//HERE IS WHERE I UPDATE THE DISPLAY CONTAINER
					$(this).load("teachables/teachable_dropped", 
					{drag_id: $(ui.draggable).attr("id"),
					 drop_id: $(this).attr("id")});
				}
			});
})
};

applyDragDrop();