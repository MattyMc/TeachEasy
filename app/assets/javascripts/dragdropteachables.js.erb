function applyDragDrop() {
$(document).ready(function() {
	//Make all teachables draggable
	$(".teachable").draggable({ revert: true });
	
	//Make the box droppable
	$( "#dropbox" ).droppable({
				accept: ".teachable",
				activeClass: "ui-state-hover",
				activate: function(event, ui) {
					$("#dropbox").effect("bounce");
				},
				tolerance: "pointer",
				drop: function( event, ui ) {
					alert("Got the drop, here's your money fucker!");
					//HERE IS WHERE I UPDATE THE DISPLAY CONTAINER
					$("#dropbox").load("teachables/teachable_dropped", {
						drag_id: $(ui.draggable).attr("id")
					});
				}
			});
})
};

applyDragDrop();